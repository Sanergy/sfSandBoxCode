<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AddEmployee_Role_If_Specific_Role_Chosen</fullName>
    <active>true</active>
    <errorConditionFormula>AND(  ISBLANK( Employee_Role__c )  , ISPICKVAL( Onboarding_for__c , &#39;Specific role&#39;) )</errorConditionFormula>
    <errorDisplayField>Employee_Role__c</errorDisplayField>
    <errorMessage>Add the Employee Role</errorMessage>
</ValidationRule>
