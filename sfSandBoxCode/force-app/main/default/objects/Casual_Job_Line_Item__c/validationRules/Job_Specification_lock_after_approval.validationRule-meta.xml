<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Job_Specification_lock_after_approval</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(  Casuals_Job__r.Status__c, &quot;Approved&quot;)
)</errorConditionFormula>
    <errorMessage>This job request has been approved and hence cannot be modified</errorMessage>
</ValidationRule>
