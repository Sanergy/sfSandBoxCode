<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CheckIfSLKPercentageValueIsEmpty</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT( ISBLANK(Purchase_Order_Item_SLK__c )  ) ,ISBLANK(SLK_percentage_value__c )
)</errorConditionFormula>
    <errorDisplayField>SLK_percentage_value__c</errorDisplayField>
    <errorMessage>Please provide the SLK percentage value</errorMessage>
</ValidationRule>
