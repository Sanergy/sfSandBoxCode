<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validation_for_cargo_required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL( Cargo__c ,&quot;Yes&quot;),
ISBLANK( Cargo_Details__c )
)</errorConditionFormula>
    <errorDisplayField>Cargo_Details__c</errorDisplayField>
    <errorMessage>Kindly specify the cargo details</errorMessage>
</ValidationRule>
